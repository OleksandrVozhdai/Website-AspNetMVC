@model IEnumerable<LAB2_OOKP.Models.User>

@{
    ViewData["Title"] = "User List";
}

<div class="text-center">
    <h1 class="display-4">User List</h1>
</div>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Surname</th>
            <th>Age</th>
            <th>Email</th>
            <th>PhoneNumber</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Id</td>
                <td>@user.Name</td>
                <td>@user.Surname</td>
                <td>@user.Age</td>
                <td>@user.Email</td>
                <td>@user.PhoneNumber</td>
                <td>
                    <form asp-action="Edit" asp-route-id="@user.Id" method="get" style="display:inline;">
                        <button type="submit" class="btn btn-success">Edit</button>
                    </form>
                    <form asp-action="DeleteConfirmed" asp-route-id="@user.Id" method="post" style="display:inline;">
                        <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this user?');">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

<form method="get" asp-action="Index" class="form-inline">
    <div class="form-group mb-2">
        <label for="filterId" class="sr-only">ID</label>
        <input type="text" class="form-control" id="filterId" name="filterId" placeholder="Filter by ID">
    </div>
    <div class="form-group mb-2">
        <label for="filterName" class="sr-only">Name</label>
        <input type="text" class="form-control" id="filterName" name="filterName" placeholder="Filter by Name">
    </div>
    <div class="form-group mb-2">
        <label for="filterPhoneNumber" class="sr-only">PhoneNumber</label>
        <input type="text" class="form-control" id="filterPhoneNumber" name="filterPhoneNumber" placeholder="Filter by PhoneNumber">
    </div>
    <button type="submit" class="btn btn-primary mb-2">Filter</button>
</form>

